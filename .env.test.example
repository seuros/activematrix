# ActiveMatrix Test Environment Configuration
# Copy this file to .env.test and update with your values

# Matrix Test Server Configuration
MATRIX_TEST_SERVER=https://arena.seuros.net
MATRIX_TEST_USER=testuser
MATRIX_TEST_PASSWORD=testuser12345678

# Alternative test user (for multi-user tests)
MATRIX_TEST_USER2=seuros
MATRIX_TEST_PASSWORD2=testuser12345678

# VCR Configuration
USE_VCR_FOR_PROTOCOL_TESTS=false  # Set to true to use real server
VCR_MODE=once                     # Options: once, new_episodes, none, all
RUN_VCR_TESTS=false              # Set to true to run VCR integration tests

# Test Behavior
CLEANUP_TEST_ROOMS=true          # Clean up test rooms after tests
USE_REAL_SERVER=false            # Enable real server tests

# Rails Environment
RAILS_ENV=test